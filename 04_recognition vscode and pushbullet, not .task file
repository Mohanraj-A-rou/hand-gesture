#Rule base gesture reconization ____________________________________________________

import cv2
import mediapipe as mp
import time
from pushbullet import Pushbullet

# ---------------- Pushbullet Setup ----------------
API_KEY = "o.3nSuPaE4Ce1uE8dlAhYbFyNj4osKq3rp"
pb = Pushbullet(API_KEY)

# ---------------- Mediapipe Setup -----------------
mp_hands = mp.solutions.hands
hands = mp_hands.Hands(
    static_image_mode=False,
    max_num_hands=1,
    min_detection_confidence=0.6,
    min_tracking_confidence=0.6
)
mp_draw = mp.solutions.drawing_utils

# ---------------- Camera Setup --------------------
cap = cv2.VideoCapture(0)

last_gesture = None
last_sent_time = 0
cooldown = 2  # seconds

# ---------------- Finger Detection ----------------
def fingers_up(hand):
    tips = [4, 8, 12, 16, 20]
    fingers = []

    # Thumb
    fingers.append(hand.landmark[4].x < hand.landmark[3].x)

    # Other fingers
    for i in range(1,5):
        fingers.append(hand.landmark[tips[i]].y < hand.landmark[tips[i]-2].y)

    return fingers

# ---------------- Gesture Logic -------------------
def detect_gesture(fingers):
    if fingers == [0,0,0,0,0]:
        return "FIST - EMERGENCY"

    elif fingers == [0,1,0,0,0]:
        return "INDEX UP - CALL CAREGIVER"

    elif fingers == [0,1,1,0,0]:
        return "TWO FINGERS - NEED HELP"

    elif fingers == [1,1,1,1,1]:
        return "OPEN PALM - OK"

    return "UNKNOWN"

# ---------------- Main Loop -----------------------
while True:
    success, frame = cap.read()
    if not success:
        break

    frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
    result = hands.process(frame_rgb)

    gesture_text = "No Hand"

    if result.multi_hand_landmarks:
        for hand in result.multi_hand_landmarks:
            mp_draw.draw_landmarks(frame, hand, mp_hands.HAND_CONNECTIONS)

            fingers = fingers_up(hand)
            gesture_text = detect_gesture(fingers)

            # ---- Pushbullet Notification Logic ----
            current_time = time.time()
            if (gesture_text != last_gesture) and (current_time - last_sent_time > cooldown):
                pb.push_note("Hand Gesture Detected", f"Gesture: {gesture_text}")
                last_gesture = gesture_text
                last_sent_time = current_time

    cv2.putText(frame, f"Gesture: {gesture_text}", (20, 50),
                cv2.FONT_HERSHEY_SIMPLEX, 1, (0,255,0), 2)

    cv2.imshow("Rule-Based Gesture Recognition", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
